<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/lis_item_background"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp">


        <com.asdevel.bullscows2.ui.widgets.TextViewHand
            android:id="@+id/ranking"
            android:layout_width="@dimen/stats_size"
            android:layout_height="@dimen/stats_size"
            android:layout_centerVertical="true"
            android:background="@drawable/circle_red_fill"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="28sp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/ranking"
            android:orientation="vertical">


            <com.asdevel.bullscows2.ui.widgets.TextViewHand
                android:id="@+id/name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/_gray_darker"
                android:textSize="28sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <com.asdevel.bullscows2.ui.widgets.TextViewHand
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/time"
                    android:textColor="@color/_gray_darker"
                    android:textSize="20sp" />

                <com.asdevel.bullscows2.ui.widgets.TextViewClock
                    android:id="@+id/time_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/_red"
                    android:textSize="23sp" />

                <com.asdevel.bullscows2.ui.widgets.TextViewHand
                    android:id="@+id/steps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="@string/steps"
                    android:textColor="@color/_gray_darker"
                    android:textSize="20sp" />

                <com.asdevel.bullscows2.ui.widgets.TextViewHand
                    android:id="@+id/steps_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/_red"
                    android:textSize="23sp" />

            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/_gray_dark" />
</LinearLayout>