<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parentPanel"
    android:layout_width="@dimen/dialog_width"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/dialog_bg"
    android:orientation="vertical"
    android:paddingBottom="3dip"
    android:paddingEnd="1dip"
    android:paddingLeft="9dp"
    android:paddingRight="9dp"
    android:paddingStart="3dip"
    android:paddingTop="9dip">

    <LinearLayout
        android:id="@+id/topPanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="54dip"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/title_template"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="9dip"
            android:layout_marginEnd="10dip"
            android:layout_marginStart="10dip"
            android:layout_marginTop="6dip"
            android:gravity="center_vertical">

            <com.asdevel.bullscows2.ui.widgets.TextViewHand
                android:id="@+id/alertTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:ellipsize="end"
                android:text="@string/title_perdedor"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/_red" />


        </RelativeLayout>


        <!-- If the client uses a customTitle, it will be added here. -->
    </LinearLayout>

    <LinearLayout
        android:id="@+id/contentPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:src="@color/_gray_dark" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp">

            <com.asdevel.bullscows2.ui.widgets.TextViewHand
                android:id="@+id/mail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:text="@string/el_numero_fue"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/_gray_darker" />

            <com.asdevel.bullscows2.ui.widgets.TextViewHand
                android:id="@+id/number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/mail"
                android:textColor="@color/_red"
                android:textSize="20sp" />
        </RelativeLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:src="@color/_gray_dark" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="54dip"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingLeft="2dip"
            android:paddingTop="4dip">


            <com.asdevel.bullscows2.ui.widgets.ButtonHand
                android:id="@+id/button_cancel"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/button"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/aceptar"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/label_button_red_color"
                android:textStyle="bold" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>