<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/lis_item_background"
    android:orientation="vertical">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/result_margin"
        android:layout_marginTop="@dimen/result_margin">


        <com.asdevel.bullscows2.ui.widgets.TextViewHand
            android:id="@+id/count"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:background="@drawable/circle_red_fill"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="15sp" />


        <com.asdevel.bullscows2.ui.widgets.TextViewHand
            android:id="@+id/gess_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@+id/count"
            android:gravity="center"
            android:textColor="@color/_red"
            android:textSize="@dimen/text_big" />

        <ImageView
            android:id="@+id/img_bull"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginRight="4dp"
            android:layout_toLeftOf="@+id/count_bull"
            android:src="@drawable/bull1" />

        <com.asdevel.bullscows2.ui.widgets.TextViewHand
            android:id="@+id/count_bull"
            android:layout_width="18dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/img_cow"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/_gray_darker" />

        <ImageView
            android:id="@+id/img_cow"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_toLeftOf="@+id/count_cow"
            android:src="@drawable/cow1" />

        <com.asdevel.bullscows2.ui.widgets.TextViewHand
            android:id="@+id/count_cow"
            android:layout_width="18dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="4"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/_gray_darker" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/_gray_dark" />
</LinearLayout>